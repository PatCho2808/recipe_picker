<div class="container">
    <div class="card">
        <div class="card-header">
            Or manually add recipe
        </div>
        <div class="card-body">
            <form action="/add" method="post">

                <label for="title">Title: </label>
                <input id="title" class="form-control" type="text" name="title" placeholder="Chicken with " value="<%=recipe.title%>"/>
                
                <label for="ingredients">Ingredients: </label>
                <input id="ingredients" class="form-control" type="text" name="ingredients" placeholder="chicken, rice " value="<%-recipe.ingredients%>" />

                <label for="link">Link: </label>
                <input id="link" class="form-control" type="text" name="link" placeholder="https://" value="<%=recipe.link%> "/>

                <input type="submit" value="Add" class="btn btn-primary">
            </form>
        </div>
      </div>
      <% if (message) {%>
      <p class="success"><%=message%></p> 
      <% } %>
</div>